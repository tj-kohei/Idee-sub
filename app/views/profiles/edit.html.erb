<% assign_meta_tags title: 'プロフィール設定' %>
<div class="container">
  <div class="row profile-edit">
    <%= render partial: 'common/sidebar' %>
    <div class="col-sm-9 col-md-9">
      <div class="panel panel-default ">
        <div class="panel-heading">
          <span class="glyphicon glyphicon-user"></span>プロフィール設定
        </div>
        <div class="panel-body">
          <div class="form-group">
            <div class="row">
              <div class="col-md-6">
                <%= form_for @profile do |f| %>

                  プロフィール画像<br />
                  <small>画像部分をクリック、または画像をドラックアンドドロップしてください</small>
                  <div class="cover-image-upload image-box avatar-edit" id="js-main-image" >
                    <%= image_tag(image_url(@profile.avatar), class: 'img-responsive profile-img-responsive') %>
                    <%= f.file_field :avatar %>
                    <%= f.hidden_field :status, value: "main" %>
                  </div>

                  <div class="form-group">
                    ニックネーム
                      <%= f.text_field :nickname, placeholder: "ニックネーム", class: "form-control" %>
                  </div>

                  <div class="form-group">
                    一言どうぞ
                      <%= f.text_area :introduction, placeholder: "一言どうぞ", size: "100x3", class: "form-control" %>
                  </div>

                  <div class="col-lg-6"><br />
                    <%= f.submit "保存", class: "btn btn-primary withripple", data: {disable_with: 'Sending...'} %>
                  </div>
                <% end %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>